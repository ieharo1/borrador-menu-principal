          <a href="/dashboard/verificar"><i class="fas fa-check-circle me-2"></i>Verificar Hash</a>
          <a href="/dashboard/carga-masiva"><i class="fas fa-file-upload me-2"></i>Carga Masiva</a>
          <a href="/dashboard/historial"><i class="fas fa-history me-2"></i>Historial</a>
          <a href="/dashboard/exportar"><i class="fas fa-download me-2"></i>Exportar</a>
          <a href="/dashboard/logs" class="active"><i class="fas fa-clipboard-list me-2"></i>Logs</a>
        </div>
      </div>
      <div class="col-md-9">
        <h2 class="mb-4"><i class="fas fa-clipboard-list me-2"></i>Logs de Actividad</h2>
        
        <div class="table-container">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Usuario</th>
                  <th>Acci√≥n</th>
                  <th>Descripci√≥n</th>
                  <th>IP</th>
                  <th>Fecha</th>
                </tr>
              </thead>
              <tbody>
                <% logs.forEach(log => { %>
                  <tr>
                    <td><%= log.user ? log.user.username : 'Sistema' %></td>
                    <td>
                      <span class="badge bg-info"><%= log.action %></span>
                    </td>
                    <td><%= log.description || '-' %></td>
                    <td><small class="text-muted"><%= log.ipAddress || '-' %></small></td>
                    <td><small><%= new Date(log.createdAt).toLocaleString() %></small></td>
                  </tr>
                <% }) %>
                <% if (logs.length === 0) { %>
                  <tr><td colspan="5" class="text-center text-muted py-4">No hay logs disponibles</td></tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
