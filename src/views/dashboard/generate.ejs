  <div class="container py-4">
    <div class="row">
      <div class="col-md-3 mb-4">
        <div class="sidebar">
          <h6 class="text-uppercase text-muted mb-3">Men√∫</h6>
          <a href="/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
          <a href="/dashboard/generar" class="active"><i class="fas fa-plus-circle me-2"></i>Generar Hash</a>
