          <a href="/dashboard/carga-masiva"><i class="fas fa-file-upload me-2"></i>Carga Masiva</a>
          <a href="/dashboard/historial"><i class="fas fa-history me-2"></i>Historial</a>
          <a href="/dashboard/exportar"><i class="fas fa-download me-2"></i>Exportar</a>
        </div>
      </div>
      <div class="col-md-9">
        <h2 class="mb-4"><i class="fas fa-plus-circle me-2"></i>Generar Hash</h2>
        
        <div class="card">
          <div class="card-body">
            <form id="generateForm">
              <div class="mb-3">
                <label class="form-label">Texto a hashear</label>
                <textarea class="form-control" name="input" rows="3" placeholder="Ingrese el texto que desea hashear" required></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label">Algoritmo</label>
                <select class="form-select" name="algorithm" required>
                  <option value="MD5">MD5</option>
                  <option value="SHA1">SHA1</option>
                  <option value="SHA256" selected>SHA256</option>
                  <option value="SHA512">SHA512</option>
                  <option value="bcrypt">bcrypt</option>
                </select>
              </div>
              <div id="resultArea" class="d-none">
                <label class="form-label">Resultado</label>
                <div class="result-box mb-2" id="hashResult"></div>
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="copyHash()">
                  <i class="fas fa-copy me-1"></i>Copiar
                </button>
              </div>
              <div id="errorArea" class="alert alert-danger d-none"></div>
              <button type="submit" class="btn btn-primary" id="generateBtn">
                <i class="fas fa-key me-1"></i>Generar Hash
              </button>
            </form>
          </div>
        </div>

        <div class="card mt-4">
          <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informaci√≥n de Algoritmos</h5>
          </div>
