  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function getToken() { return localStorage.getItem('hash_token'); }
    function logout() { localStorage.removeItem('hash_token'); window.location.href = '/'; }

    let currentHash = '';

    document.getElementById('generateForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData);
      const btn = document.getElementById('generateBtn');
      const errorArea = document.getElementById('errorArea');
      
      btn.disabled = true;
      btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Generando...';
      errorArea.classList.add('d-none');
      document.getElementById('resultArea').classList.add('d-none');

      try {
        const res = await fetch('/api/hashes/generate', {
          method: 'POST',
          headers: { 
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${getToken()}`
          },
          body: JSON.stringify(data)
        });
        const result = await res.json();

        if (result.success) {
          currentHash = result.data.hash;
          document.getElementById('hashResult').textContent = currentHash;
          document.getElementById('resultArea').classList.remove('d-none');
        } else {
          errorArea.textContent = result.message;
          errorArea.classList.remove('d-none');
        }
      } catch (err) {
        errorArea.textContent = 'Error de conexi√≥n';
        errorArea.classList.remove('d-none');
      } finally {
        btn.disabled = false;
        btn.innerHTML = '<i class="fas fa-key me-1"></i>Generar Hash';
      }
    });

    function copyHash() {
      navigator.clipboard.writeText(currentHash).then(() => {
        alert('Hash copiado al portapapeles');
      });
    }
  </script>
</body>
</html>
